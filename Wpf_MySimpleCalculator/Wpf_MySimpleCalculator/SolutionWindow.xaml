<Window x:Class="Wpf_MySimpleCalculator.SolutionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_MySimpleCalculator"
        mc:Ignorable="d"
        Title="SolutionWindow" Height="250" Width="300">
    <StackPanel>
        <Label
            x:Name="Label_Volume"
            HorizontalContentAlignment="Center"
            FontSize="18"
            Content="Conversion Result"/>
        <Button
            x:Name="Button_CloseButton"
            Content="Close"
            Height="35"
            Width="80"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="1"
            Click="Button_CloseButton_Click"
            Margin="20"
            />
    </StackPanel>
</Window>
